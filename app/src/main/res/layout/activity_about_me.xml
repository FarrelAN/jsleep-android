<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".AboutMe">


    <TextView
        android:id="@+id/abme_text"
        android:layout_width="353dp"
        android:layout_height="80dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="About Me"
        android:textColor="#ECB365"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/acc_text"
        android:layout_width="159dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_horizontal"
        android:text="Account Details"
        android:textColor="#ECB365"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/abme_text" />

    <Button
        android:id="@+id/topup_button"
        android:layout_width="102dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="364dp"
        android:backgroundTint="#EBB265"
        android:fontFamily="@font/montserrat_bold"
        android:text="Top Up"
        android:textColor="@color/bg"
        android:textColorHint="@color/bg"
        android:textColorLink="@color/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/topup_amount" />

    <TextView
        android:id="@+id/topup_dollar"
        android:layout_width="20dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat_thin"
        android:gravity="center_vertical"
        android:text="$"
        android:textColor="#EBB265"
        android:textColorHighlight="#EBB265"
        android:textColorHint="#EBB265"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/topup_amount"
        app:layout_constraintTop_toTopOf="@+id/topup_amount" />

    <TextView
        android:id="@+id/topup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Top Up Your Sleeper Balance"
        android:textColor="#ECB365"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.415" />

    <EditText
        android:id="@+id/topup_amount"
        android:layout_width="112dp"
        android:layout_height="48dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/montserrat_extralight_italic"
        android:foregroundTint="@color/white"
        android:gravity="center_horizontal"
        android:hint="Amount"
        android:inputType="numberDecimal"
        android:textColorHint="#80ECB365"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topup_text" />

    <Button
        android:id="@+id/button_regrent"
        android:layout_width="219dp"
        android:layout_height="44dp"
        android:layout_marginBottom="304dp"
        android:backgroundTint="#EBB265"
        android:fontFamily="@font/montserrat_bold"
        android:text="Register Renter"
        android:textColor="@color/bg"
        android:textColorHint="@color/bg"
        android:textColorLink="@color/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="151dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acc_text">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:text="Name"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="right"
            android:text="Email"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/text_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="right"
            android:text="Balance"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="157dp"
        android:layout_height="100dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">

        <TextView
            android:id="@+id/acc_name"
            android:layout_width="137dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="right"
            android:text="M. Farrel A. N."
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/acc_email"
            android:layout_width="136dp"
            android:layout_height="29dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="right"
            android:text="m.farrel@ui.ac.id"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/acc_balance"
            android:layout_width="134dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="right"
            android:text="99999.9 USD"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_RegRent"
        android:layout_width="314dp"
        android:layout_height="168dp"
        android:layout_marginStart="16dp"
        app:cardBackgroundColor="@color/bg"
        android:visibility="gone"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.395"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.792"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="286dp"
            android:layout_height="159dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/regrent_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:fontFamily="@font/montserrat_extralight_italic"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="#80FFFFFF" />

            <EditText
                android:id="@+id/regrent_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:fontFamily="@font/montserrat_extralight_italic"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:textColor="#80FFFFFF"
                android:textColorHighlight="#80FFFFFF"
                android:textColorHint="#80FFFFFF" />

            <EditText
                android:id="@+id/regrent_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:fontFamily="@font/montserrat_extralight_italic"
                android:hint="Phone Number"
                android:inputType="number"
                android:textColorHint="#80FFFFFF" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_Regbutton"
        android:layout_width="126dp"
        android:layout_height="41dp"
        android:visibility="gone"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="76dp"
        app:cardBackgroundColor="@color/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="gone">

        <Button
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:backgroundTint="#EBB265"
            android:fontFamily="@font/montserrat_bold"
            android:text="Register"
            android:textColor="@color/bg"
            android:textColorHint="@color/bg"
            android:textColorLink="@color/bg" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_Cnclbutton"
        android:layout_width="121dp"
        android:layout_height="41dp"
        android:layout_marginStart="204dp"
        android:layout_marginBottom="76dp"
        app:cardBackgroundColor="@color/bg"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="gone">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:backgroundTint="#EBB265"
            android:fontFamily="@font/montserrat_bold"
            android:text="Cancel"
            android:textColor="@color/bg"
            android:textColorHint="@color/bg"
            android:textColorLink="@color/bg" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_AvailRent"
        android:layout_width="121dp"
        android:layout_height="41dp"
        android:layout_marginStart="204dp"
        android:layout_marginBottom="76dp"
        app:cardBackgroundColor="@color/bg"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="gone">

    <LinearLayout
        android:layout_width="156dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="440dp">

        <TextView
            android:id="@+id/availrent_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:text="Name"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/availrent_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="right"
            android:text="Address"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/availrent_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="right"
            android:text="Phone Number"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="153dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="440dp">

        <TextView
            android:id="@+id/varrent_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="right"
            android:text="Netlab Store"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/varrent_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="right"
            android:text="Gedung DTE Lantai 2"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/varrent_Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="right"
            android:text="081234567890"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>