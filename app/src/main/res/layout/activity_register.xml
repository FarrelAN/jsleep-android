<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/bg"
    >

    <ImageView
        android:id="@+id/title_moon"
        android:layout_width="171dp"
        android:layout_height="238dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_jsleep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/moon3alt" />

    <TextView
        android:id="@+id/title_jsleep"
        android:layout_width="290dp"
        android:layout_height="112dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="41dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_horizontal"
        android:text="JSleep"
        android:textColor="@color/Porsche"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Fill out your information, Sleeper!"
        android:textColor="@color/Porsche"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.397" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="148dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_text"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/register_name"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="16dp"
            android:backgroundTint="#80FFFFFF"
            android:ems="10"
            android:fontFamily="@font/montserrat_extralight_italic"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="#80ECB365"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/register_email"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="16dp"
            android:backgroundTint="#80FFFFFF"
            android:ems="10"
            android:fontFamily="@font/montserrat_extralight_italic"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="#80ECB365" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="16dp"
            android:backgroundTint="#80FFFFFF"
            android:ems="10"
            android:fontFamily="@font/montserrat_extralight_italic"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="#80ECB365" />

    </LinearLayout>

    <Button
        android:id="@+id/register_button"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/blue3"
        android:fontFamily="@font/montserrat_bold"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />


</androidx.constraintlayout.widget.ConstraintLayout>